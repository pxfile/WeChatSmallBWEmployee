.container {
    width: 100%;
}

.top-container-finish {
    height: auto;
    width: 100%;
    background-color: #fff;
    color: #868686;
    margin-bottom: 10px;
}

.top-container-finish .time {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin: 10px 15px;
}

.top-container {
    display: flex;
    height: 100%;
    width: 100%;
    align-items: center;
    justify-content: center;
    background-color: #fff;
    color: #868686;
    margin-bottom: 10px;
}

.detail-message {
    margin-top: 10px;
    text-align: center;
}

.detail-message .detail-icon {
    width: 20px;
    height: 20px;
    margin-right: 5px;
}

.detail-message .detail-waiting-time {
    color: #FF0000;
    margin-left: 5px;
}

.detail-message .detail-title {
    font-size: 16px;
    font-weight: bold;
    color: #333;
    margin: 2px 0;
}

.detail-message .detail-text {
    margin-top: 5px;
}

.detail-message .detail-button {
    font-size: 16px;
    margin: 15px auto;
    text-align: center;
    width: auto;
}

.detail-message .detail-button .cancel {
    border: 1px #999999 solid;
    color: #333;
    padding: 4px 5px;
}

.detail-message .detail-button .confirm {
    color: #fff;
    background-color: #FF0000;
    padding: 5px 6px;
    margin-left: 15px;
}

.time-container-top {
    display: flex;
    height: auto;
    width: 100%;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    background-color: #fff;
    color: #868686;
    font-size: 16px;
}

.arrow-icon {
    width: 10px;
    height: 15px;
    margin-right: 15px;
}

.time-container {
    display: flex;
    height: auto;
    width: auto;
    flex-direction: column;
}

.time-sub-container {
    margin: 10px 5px;
}

.time-des {
    display: flex;
    flex-direction: row;
}

.calendar-icon {
    width: 24px;
    height: 24px;
    margin-right: 5px;
}

.time-text {
    color: #333;
}

.time-view {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    height: 36px;
    font-size: 15px;
    color: #333333;
    width: 100%;
    line-height: 36px;
    text-align: center;
    background-color: #f2f2f2;
}

.time-view-text {
    margin-left: 15px;
}

.goods-container {
    margin-bottom: 90px;
    background-color: white;
    height: 100%;
}

.goods-item {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-bottom: 5px;
    background-color: #ffffff;
    padding: 10px 15px 5px 15px;
}

.goods-item-left {
    width: 50px;
    height: 50px;
}

.goods-image {
    width: 50px;
    height: 50px;
    border-radius: 100%;
}

.goods-item-title {
    font-size: 14px;
    word-break: break-all;
    display: -webkit-box;
    -webkit-line-clamp: 2; /*限制在一个块元素显示的文本的行数*/
    -webkit-box-orient: vertical;
    overflow: hidden;
    color: #333;
    margin-left: 10px;
    width: 65%;
    line-height: 1.5;
    float: left;
}

.goods-item-title-num {
    font-size: 13px;
    word-break: break-all;
    display: -webkit-box;
    -webkit-line-clamp: 1; /*限制在一个块元素显示的文本的行数*/
    -webkit-box-orient: vertical;
    overflow: hidden;
    color: #666;
    margin-left: 5px;
    margin-right: 5px;
    line-height: 1.5;
    float: right;
}

.goods-item-bottom {
    line-height: 1.5;
    width: 100%;
    padding-top: 5px;
    font-size: 12px;
    float: left;
}

.goods-item-bottom-btn {
    margin-bottom: 5px;
}

.goods-item-expiration-days {
    color: #999;
    width: auto;
    margin-left: 10px;
    float: left;
}

.goods-item-num {
    color: #999;
    margin-left: 5px;
    text-align: center;
    width: auto;
    margin-right: 5px;
    font-size: 13px;
    float: right;
}

.line {
    background-color: #f2f2f2;
    height: 1px;
    width: 100%;
}

.goods-bottom-suspension {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    height: auto;
    overflow: hidden;
    position: fixed;
    background-color: #ffffff;
    bottom: 0;
}

.goods-suspension-time {
    line-height: 45px;
    margin-right: 5px;
    text-align: center;
    width: auto;
    height: 45px;
    font-size: 10px;
    color: #868686;
}

.pick-time {
    width: 100%;
}