<view>
    <view class="container">
        <view class="sub-container-code">
            <text class="text-view">微信号：</text>
            <input type="text" bindinput="phoneInput" value="{{phoneNumber}}"/>
        </view>
        <view class="hint-text">温馨提示：登录代表您已同意《用户注册协议》</view>
        <view class="btn-login-view">
            <button class="btn-login" bindtap="login" formType="submit" bindtap="loginBtnClick">登录</button>
        </view>
    </view>
</view>